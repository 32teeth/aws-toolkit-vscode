{
    "name": "root",
    "workspaces": [
        "packages/*",
        "plugins/*",
        "src.gen/@amzn/codewhisperer-streaming"
    ],
    "version": "0.0.1",
    "private": true,
    "prettier": {
        "printWidth": 120,
        "trailingComma": "es5",
        "tabWidth": 4,
        "singleQuote": true,
        "semi": false,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "endOfLine": "lf"
    },
    "scripts": {
        "prepare": "ts-node ./scripts/prepare.ts",
        "postinstall": "npm run buildCustomLintPlugin",
        "buildCustomLintPlugin": "npm run build -w plugins/eslint-plugin-aws-toolkits",
        "newChange": "ts-node ./scripts/newChange.ts",
        "createRelease": "ts-node ./scripts/createRelease.ts",
        "format": "prettier --check src-* plugins",
        "formatfix": "prettier --write src-* plugins",
        "lint": "npm run lint -w src-* && npm run format",
        "lintfix": "eslint -c .eslintrc.js --fix --ext .ts . && npm run formatfix",
        "clean": "npm run clean -w src-* && ts-node ./scripts/clean.ts node_modules",
        "reset": "npm run clean && npm install",
        "compile": "npm run compile -w src-*"
    },
    "devDependencies": {
        "typescript": "^5.0.4",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "8.8",
        "eslint-plugin-aws-toolkits": "file:plugins/eslint-plugin-aws-toolkits",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-no-null": "^1.0.2",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.1",
        "@types/node": "^14.18.63",
        "@types/vscode": "^1.68.0",
        "@types/vscode-webview": "^1.57.1",
        "@vscode/codicons": "^0.0.33",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/test-web": "^0.0.50",
        "@vscode/vsce": "^2.19.0",
        "prettier": "^2.8.8",
        "prettier-plugin-sh": "^0.12.8",
        "pretty-quick": "^3.1.3",
        "husky": "^7.0.2",
        "ts-node": "^10.9.1"
    }
}
