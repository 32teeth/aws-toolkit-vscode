{
    "compilerOptions": {
        "paths": {
            "*": ["types/*"],
            "@sinonjs/fake-timers": ["node_modules/@types/sinonjs__fake-timers"]
        },
        "module": "commonjs",
        "target": "es2021",
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "rootDir": ".",
        "resolveJsonModule": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitOverride": true,
        "lib": ["dom", "es2021"],
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "noEmitOnError": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "src.gen"]
}
